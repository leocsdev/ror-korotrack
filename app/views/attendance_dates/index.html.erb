<h1 class="text-2xl font-bold mb-6">
  Attendance Dashboard
</h1>

<%= form_with url: attendance_dates_path, method: :post, class: "mb-6 flex flex-wrap gap-2" do %>
  <%= date_field_tag :date, Date.current,
        class: "border rounded px-2 py-1" %>

  <%= select_tag :attendance_type,
        options_for_select(AttendanceDate::ATTENDANCE_TYPES, "ensayo"),
        class: "border rounded px-2 py-1" %>

  <%= submit_tag "Create Attendance",
        class: "bg-blue-600 text-white px-4 py-1 rounded" %>
<% end %>

<ul class="divide-y">
  <% @attendance_dates.each do |attendance_date| %>
    <li class="py-3 flex justify-between items-center">
      <div>
        <div class="font-medium">
          <%= attendance_date.date.strftime("%B %d, %Y") %>
        </div>
        <div class="text-sm text-gray-500">
          <%= attendance_date.attendance_type.humanize %>
        </div>
      </div>

      <%= link_to "Open",
            attendance_path(date: attendance_date.date),
            class: "text-blue-600 font-medium" %>
    </li>
  <% end %>
</ul>
